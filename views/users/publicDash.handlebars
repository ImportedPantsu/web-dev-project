<div>
    <h1>{{title}}</h1>
    <br>
    {{#if alreadyFollowed}}
    <form method="POST">
        <input name="unfollowButton" type="hidden" value={{traderEmail}}>
        <button type="submit" class="unfollow-button" name="unfollowButton">Unfollow User</button>
    </form>
    {{else}}
    <form method="POST">
        <input name="followButton" type="hidden" value={{traderEmail}}>
        <button type="submit" class="follow-button" name="followButton">Follow User</button>
    </form>
    {{/if}}

    {{#if traderCompanies.length}}
        <div class="listLayout">
            {{#each traderCompanies}}
            <div class="companyBox">
                <a href="../companies/{{this.ticker}}">
                    {{this.name}} ({{this.ticker}})
                </a>
                <form method="POST">
                    <input name="addButton" type="hidden" value="{{this.ticker}}">
                    <button type="submit" class="add-button" name="addButton">Add</button>
                </form>
                {{#if this.increased}}
                <p>Price: {{this.price}} <span class="greenStock">+{{this.change}} ({{this.percentIncrease}}%)</span></p>
                {{else}}
                <p>Price: {{this.price}} <span class="redStock">{{this.change}} ({{this.percentIncrease}}%)</span></p>
                {{/if}}
                <p>Average Rating:
                    {{#if this.averageRating}} {{#each this.ratingsArr}} <span class="fa fa-star checked"></span> {{/each}}
                </p>
                {{else}} No Ratings Found </p>
                {{/if}}
                <p class="stock-description">Description: {{this.description}}</p>
            </div>
            {{/each}}
        </div>
    {{else}}
        <div class="no-stock-info"><p>This user currently have no stocks added to your dashboard.</p></div>
    {{/if}}
    <br>
    <br>
</div>