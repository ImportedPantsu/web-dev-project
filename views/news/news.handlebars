<div>
    <h1>{{title}}</h1>
    <br>
    <hr>
    <br>
    <label>
      Search for Company News:
      <form method="POST" id="tickerInput">
        <label for="tickerInput" id="tickerInputLabel">Enter Company: </label>
        <input type="text" id="tickerInput" name="tickerInput" minlength="2" placeholder="Tesla" class="full-width-input"><br><br>
        <button type="submit">Submit</button>
        </form>
    <br>
    <br>
    <br>
    <br>
    <div>
        {{#each topNews}}
            <div>
                <img src="{{this.urlToImage}}" alt="{{this.source.name}}" class="news-img">
                <p>Title: {{this.title}}</p>
                <p>Description: {{this.description}}</p>
                <p>Website: <a href="{{this.url}}" target="_blank">Link</a></p>
                <p>Date: {{this.publishedAt}}</p>
            </div>
            <br>
            <br>
            <hr>
            <br>
            <br>
        {{/each}}
    </div>

</div>